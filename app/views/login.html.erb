<% Auth.providers.each do |(provider_id, provider_config)| %>
  <%
    provider_i18n = i18n.auth.send(provider_id)
    css_id        = provider_i18n[:css_id] || provider_id
    omniauth_id   = provider_config[:omniauth][:id]
  %>
  <a
    href="/auth/<%= omniauth_id %>"
    popup
    class="btn btn-lg btn-social btn-<%= css_id %>">
    <i class="fa fa-<%= css_id %>"></i>Se connecter avec <em><%= provider_i18n.name %></em>
  </a>
<% end %>